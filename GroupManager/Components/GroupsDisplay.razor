@using GroupManager.Data.Models;

<div class="groups-display">
    <div class="groups-display__buttons">
        @foreach (var group in Groups)
        {
            <button Class="group-button mud-width-full">
                <MudIcon Icon="@Icons.Material.Filled.Save" Title="@group"></MudIcon>
                @group
            </button>
        }
    </div>
    <div class="groups-display__drop-area">
        @ChildContent
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public List<string> Groups { get; set; } = new List<string>();
}